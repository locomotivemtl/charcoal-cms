{
    "template": {
        "ident": "charcoal/cms/event"
    },

    "routable": {
        "editable": true,
        "pattern": {
            "fr": "{{ title }}",
            "en": "{{ title }}"
        },
        "prefix": {
            "fr": "fr/evenements/",
            "en": "en/events/"
        }
    },

    "default_data": {
        "main_menu": "content",
        "secondary_menu": "content"
    },

    "sources": {
        "default": {
            "table": "cms_events"
        }
    },
    "default_source": "default",

    "labels": {
        "name": {
            "fr": "Événements",
            "en": "Event"
        },
        "singular_name": {
            "fr": "Événement",
            "en": "Event"
        },
        "edit_item": {
            "fr": "Modifier l'événement",
            "en": "Edit event"
        },
        "all_items": {
            "fr": "Tous les événements",
            "en": "All Events"
        },
        "menu_items": {
            "fr": "Événements",
            "en": "Events"
        }
    },

    "properties": {
        "id": {
            "type": "id"
        },
        "title": {
            "type": "string",
            "l10n": true,
            "label": {
                "en": "Title",
                "fr": "Titre"
            }
        },
        "subtitle": {
            "type": "text",
            "l10n": true,
            "input_type": "charcoal/admin/property/input/textarea",
            "label": {
                "en": "Subtitle",
                "fr": "Sous-titre"
            }
        },
        "summary": {
            "type": "html",
            "l10n": true,
            "label": {
                "en": "Summary",
                "fr": "Sommaire"
            }
        },
        "content": {
            "type": "html",
            "l10n": true,
            "label": {
                "en": "Content",
                "fr": "Contenu"
            }
        },
        "image": {
            "type": "image",
            "l10n": true,
            "public_access": true,
            "upload_path": "uploads/events/"
        },
        "start_date": {
            "type": "date-time",
            "label": {
                "fr": "Date de début",
                "en": "Start date"
            },
            "notes": {
                "en": "Will be set to the start date if blank.",
                "fr": "La date actuelle sera utilisée si laissée vide."
            }
        },
        "end_date": {
            "type": "date-time",
            "label": {
                "fr": "Date de fin",
                "en": "End date"
            },
            "notes": {
                "en": "Will be set to the current if blank.",
                "fr": "La date de début sera utilisée si laissé vide."
            }
        },
        "info_url": {
          "type": "url",
          "l10n": true
        },
        "keywords": {
            "type": "object",
            "obj_type": "charcoal/cms/tag",
            "input_type": "charcoal/admin/property/input/selectize/tags",
            "multiple": true,
            "label": {
                "fr": "Mots-clés",
                "en": "Keywords"
            },
            "description": {
                "fr": "Les mots-clés permettent d'optimiser la recherche",
                "en": "Key-words optimises research"
            }
        }
    }
}
